<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghome"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="USM MAIN CAMPUS"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:background="#FFBB86FC"
        android:drawableLeft="@drawable/info"
        android:drawablePadding="0dp"
        android:onClick="button1"
        android:padding="1dp"
        android:text="About USM"
        android:textSize="16sp"
        android:layout_marginStart="70dp" />

    <Button

        android:id="@+id/button2"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="15dp"
        android:background="#FFBB86FC"
        android:drawableLeft="@drawable/attraction"
        android:drawablePadding="0dp"
        android:gravity="center"
        android:onClick="button2"
        android:padding="1dp"
        android:text="Attraction"
        android:textSize="16sp"
        android:layout_marginStart="70dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:background="#FFBB86FC"
        android:drawableLeft="@drawable/accomodation"
        android:drawablePadding="0dp"
        android:onClick="button3"
        android:padding="1dp"
        android:text="Accommodation"
        android:textSize="16sp"
        android:layout_marginStart="0dp"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:background="#FFBB86FC"
        android:drawableLeft="@drawable/map"
        android:drawablePadding="0dp"
        android:onClick="button4"
        android:padding="1dp"
        android:text="USM MAIN CAMPUS Map &amp; Video"
        android:textSize="16sp"
        android:layout_marginStart="0dp"
        />

    <Button
        android:id="@+id/browser1"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:background="#FFBB86FC"
        android:drawablePadding="0dp"
        android:onClick="browser1"
        android:padding="1dp"
        android:text="USM WEBSITE"
        android:textSize="16sp"
        android:layout_marginStart="0dp" />

</RelativeLayout>